<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">byteSize</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <div style="padding:0 10px 0 0" class="h2"><%=username%></div>
    <a class="btn btn-primary" href="/register">Register</a>

    <% if (!username){ %>

    <a class="btn btn-primary" style="margin:5px;" href="/login">Log in</a>

    <% }else{ %>
    <form action="/logout" method="POST">
      <button class="btn btn-primary" style="margin:5px;" type="submit">
        Log out
      </button>
    </form>
    <% } %>
  </nav>
</header>
